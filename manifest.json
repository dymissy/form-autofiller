{
    "name": "Form AutoFiller",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Auto fill each form field within the page with one click.",
    "icons": {
        "16": "assets/images/icon-16.png",
        "48": "assets/images/icon-48.png",
        "128": "assets/images/icon-128.png"
    },
    "permissions": ["tabs", "http://*/*", "https://*/*"],
    "browser_action": {
        "default_icon": "assets/images/icon-48.png",
        "default_title": "Fill all inputs"
    },
    "content_scripts": [
        {
            "all_frames": true,
            "js": ["assets/js/jquery.js", "assets/js/keymaster.js"/*, "assets/js/content.js"*/],
            "matches": [ "<all_urls>" ]
        }
    ],
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
    "background": {
        "page": "background.html"
    },
    "options_page": "options.html"
}